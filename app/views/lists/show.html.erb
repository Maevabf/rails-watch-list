<%= @list.name %>

<% @list.bookmarks.each do |bookmark|%>
  <%= bookmark.movie.title %>
  <%= bookmark.comment %>
  <%= link_to "Supprimer ce commentaire", bookmark_path(bookmark), data: {turbo_method: :delete} %>
<% end %>

